# Maintainer: npaladin2000

pkgname=flycast_xtreme_libretro_go2
pkgver=1.0.0
pkgrel=3
pkgdesc='Dependencies for 32 bit flycast using RetroRun'
arch=(aarch64)
license=(GPL2)
source=(retrorun32
        libevdev.so.2.3.0
)

package() {
    install -Dm 755 retrorun32 -t "$pkgdir"/usr/bin
    install -Dm 755 libevdev.so.2.3.0 "$pkgdir"/usr/arm-linux-gnueabihf/lib
    ln -s  /usr/arm-linux-gnueabihf/lib/libevdev.so.2.3.0 /usr/arm-linux-gnueabihf/lib/libevdev.so.2
    mkdir /home/odroid/dreamcast-saves
    chown odroid:odroid /home/odroid/dreamcast_saves
}
