# Maintainer: npaladin2000

pkgname=dr4st1c-install-go2
pkgver=1.1.0
pkgrel=5
pkgdesc='A DS emulator installer for Linux'
arch=(x86_64 aarch64)
url=https://www.drastic-ds.com/
license=(GPL2)
depends=(
  glibc
  sdl2
  zlib
)
source=(
  drastic
  drastic.cf2
  drastic.cfg
  drastic.sh
  drastic_bios_arm7.bin
  drastic_bios_arm9.bin
  drastic_logo_0.raw
  drastic_logo_1.raw
  drastic_readme.txt
  game_database.xml
  usrcheat.dat  
)


package() {
    install -Dm 644 drastic_bios_arm7.bin "$pkgdir"/home/odroid/drastic/system
    install -Dm 644 drastic_bios_arm9.bin "$pkgdir"/home/odroid/drastic/system
    
    install -Dm 644 drastic_logo_0.raw "$pkgdir"/home/odroid/drastic
    install -Dm 644 drastic_logo_1.raw "$pkgdir"/home/odroid/drastic
    install -Dm 644 drastic_readme.txt "$pkgdir"/home/odroid/drastic
    install -Dm 644 game_database.xml "$pkgdir"/home/odroid/drastic
    install -Dm 644 usrcheat.dat "$pkgdir"/home/odroid/drastic
    install -Dm 755 drastic "$pkgdir"/home/odroid/drastic

    install -Dm 644 drastic.cfg "$pkgdir"/home/odroid/drastic/config
    install -Dm 644 drastic.cf2 "$pkgdir"/home/odroid/drastic/config
    install -Dm 755 drastic.sh "$pkgdir"/usr/bin
    
    chown -R odroid:odroid "$pkgdir"/home/odroid/drastic
}
md5sums=('4e725f321648c552587fcef00767897a'
