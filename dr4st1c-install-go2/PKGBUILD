# Maintainer: npaladin2000

pkgname=dr4st1c-install-go2
pkgver=1.1.0
pkgrel=4
pkgdesc='A DS emulator installer for Linux'
arch=(x86_64 aarch64)
url=https://www.drastic-ds.com/
license=(GPL2)
depends=(
  glibc
  sdl2
  zlib
)
source=(
  drastic
  drastic.cf2
  drastic.cfg
  drastic.sh
  drastic_bios_arm7.bin
  drastic_bios_arm9.bin
  drastic_logo_0.raw
  drastic_logo_1.raw
  drastic_readme.txt
  game_database.xml
  usrcheat.dat  
)


package() {
    mkdir /home/odroid/drastic/
    mkdir /homeodroid/drastic/config
    mkdir /home/odroid/drastic/system
    
    install -Dm 755 drastic_bios_arm7.bin "$pkgdir"~/drastic/system/
    install -Dm 755 drastic_bios_arm9.bin "$pkgdir"~/drastic/system/
    
    install -Dm 755 drastic_logo_0.raw "$pkgdir"~/drastic/
    install -Dm 755 drastic_logo_1.raw "$pkgdir"~/drastic/
    install -Dm 755 drastic_readme.txt "$pkgdir"~/drastic/
    install -Dm 755 game_database.xml "$pkgdir"~/drastic/
    install -Dm 755 usrcheat.dat "$pkgdir"~/drastic/
    install -Dm 755 drastic "$pkgdir"~/drastic/

    install -Dm 755 drastic.cfg "$pkgdir"~/drastic/config/
    install -Dm 755 drastic.cf2 "$pkgdir"~/drastic/config/
    install -Dm 755 drastic.sh "$pkgdir"/usr/bin/drastic/
    
    chown -R odroid:odroid /home/odroid/drastic
}
